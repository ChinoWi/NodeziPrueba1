#container
	margin 0
	padding 0
	height 100%
	display table
	width 100%

.Demo
	display table-cell
	text-align center
	vertical-align middle


:root
	--progress-bg-color #49B5D5
	--progress-fg-color #F2F2F2

	--progressInfo-bg-color #49B5D5
	--progressInfo-fg-color #f26b6b
	--progressInfo-fy-color #f239e6

.CircularProgress-Bg,
.CircularProgress-Fg
	fill none

.CircularProgress-Bg
	stroke var(--progress-bg-color)

.CircularProgress-Fg
	transition stroke-dashoffset .5s ease-in-out
	stroke var(--progress-fg-color)

.CircularProgress-Text
	fill var(--progress-fg-color)
	transform translate(0 50%)


.CircularProgressInfo-Bg
	fill none

.CircularProgressInfo-Bg
	stroke var(--progressInfo-fy-color)


.CircularProgressInfo-Text
	fill var(--progressInfo-fg-color)
	transform translate(0 50%)
