.contentRespuesta
	padding 15px

.sectionInfoQue
	.content
		box-shadow: 0 1px 3px rgba(0,0,0,.12),0 1px 2px rgba(0,0,0,.24)
		webkit-box-shadow: 0 1px 3px rgba(0,0,0,.12),0 1px 2px rgba(0,0,0,.24)
		&-title
			padding 15px
			background #08D1D8
			.title-mensaje
				padding-left 20px
				color white
				font-size 18px
				i
					padding-right 10px
		.imgFondo
			height 250px
			background-image: url("../images/fondoimg1.png");
			background-repeat: no-repeat;
			background-position: center center;
			background-attachment fixed
			background-size: cover;
			&-content
				padding 30px
				.text-mensaje
					color white
					margin 10px
					font-size 20px
				img
					height 200px

					color white

@media screen and (max-width: 639px)
	.sectionInfoQue
		.content
			.imgFondo
				&-content
					.text-mensaje
						color white
						margin 10px
						text-align center
						font-size 14px

