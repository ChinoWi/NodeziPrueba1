.sectionTecnologias
  .text-content
    background #FAFAFA
    padding 15px
    border-bottom .5px solid #49b5d5
    .title
      font-size 20px
  .content-up
    background white
    padding 20px 60px
    .separacion
      padding 20px
      .card-item
        border 1px solid #CFD8DC
        .item-img
          padding-top 40px
          img
            height 100px
        .item-text
          text-align left
          padding 5px
          .text-title
            color #5F6A70
            font-size 20px
          .text-texto
            color #546e7a;
            font-size 14px
  .content-bottom
    text-align center
    color blue
    .urlDir
      margin 5px
      color red
      display inline-block
      padding 3px


@media screen and (max-width: 639px)
  .sectionTecnologias
    .content-up
      padding 5px
      .separacion
        padding 10px
        .card-item
          .item-img
            padding-top 40px
            img
              height 80px
          .item-text
            .text-texto
              font-size 12px

@media screen and (min-width: 640px)  and (max-width: 1023px)
  .sectionTecnologias
    .content-up
      padding 20px 30px
      .separacion
        .card-item
          .item-img
            padding-top 45px
