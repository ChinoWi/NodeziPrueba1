
[class*="entypo-"]:before
    font-family: 'entypo', sans-serif;

.sectionhomeAll
    .sectionhome1
        background white
        background-image url(../../asset/images/gradient-background.png)
        background-repeat no-repeat
        background-position center
        background-size cover
        height 200px
        padding 30px
        .content
            position relative;
            height 150px
            display flex
            .text-content
                -webkit-align-self: flex-end;
                padding-bottom 20px
                padding-left 60px
                .description
                    font-size 22px
                    color white
                    max-width 400px
            .text-img
                position: absolute;
                top: 10px;
                right: 15px
                img
                    height 50px
                    opacity 0.7

    .sectionhome2
        background white
        .container1
            padding 140px
            border-radius 2px
            p
                font-size 25px
                color #5F6A70
        .container2
            border-radius 2px

    .sectionhome4
        background white
        padding 40px 2px
        .container
            padding 10px
            .section-title
                text-align center
                margin 10px
                .title
                    padding 20px
                    font-size 28px
                    color #5F6A70
            .spaces
                padding 10px
                .content
                    border-radius 2px
                    border 1px solid #e4eaec
                    background #F0F0F0
                    margin 1px
                    img
                        height 120px
                        padding 15px
                    .text-content
                        padding 10px
                        font-size 16px
                        background #728087
                        color white
                .content:hover
                    border 1px solid #0072C6
                    color white
                .content:hover .text-content
                    background #0072C6
