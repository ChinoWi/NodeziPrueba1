
[class*="entypo-"]:before
    font-family: 'entypo', sans-serif;

.sectionhomeAll
    box-shadow: 0 1px 0px rgba(0,0,0,.12),0 1px 2px rgba(0,0,0,.24)
    webkit-box-shadow: 0 1px 0px rgba(0,0,0,.12),0 1px 2px rgba(0,0,0,.24)

.sectionhome
    background white
    background-image url(../../asset/images/gradient-background.png)
    background-repeat no-repeat
    background-position center
    background-size cover
    height 200px
    padding 30px
    .content
        position relative;
        height 150px
        display flex
        .text-content
            -webkit-align-self: flex-end;
            padding-bottom 20px
            padding-left 60px
            .description
                font-size 22px
                color white
                max-width 400px
        .text-img
            position: absolute;
            top: 10px;
            right: 15px
            img
                height 50px
                opacity 0.7

@media screen and (max-width: 639px)
    .sectionhome
        padding 15px
        .content-small
            text-align center
            padding 0 18px 0 18px
            .description-small
                font-size 18px
                color white
        .content
            display none

@media screen and (min-width: 640px) and (max-width: 1023px)
    .sectionhome
        .content
            .text-content
                .description
                    max-width 300px
                    font-size 18px


.sectionhome1
    background white
    .container1
        padding 10px
        border-radius 2px
    .container2
        border-radius 2px
        display flex

@media screen and (max-width: 639px)
    .sectionhome1
        .container2
            display block
            margin-top -80px
            .flex-video
                text-align center
                margin 0 40px 20px 40px
            .bottomVideo-span
                display flex
                color white
                justify-content space-around
                .texto
                    margin-bottom -8px
                .spacio
                    margin 1px
                    border  1px solid #4B8BA0



