.sectionhomeAll
    .sectionhome1
        background white
        background-image url(../../images/gradient-background.png)
        background-repeat no-repeat
        background-position center
        background-size cover
        height 200px
        padding 30px
        .content
            position relative;
            height 150px
            display flex
            .text-content
                -webkit-align-self: flex-end;
                padding-bottom 20px
                padding-left 60px
                .description
                    font-size 22px
                    color white
                    max-width 400px
            .text-img
                position: absolute;
                top: 10px;
                right: 15px
                img
                    height 50px
                    opacity 0.7

    .sectionhome2
        background white
        border-bottom 1px solid #E9EAEA
        .container1
            border-radius 2px
            padding-top 150px
            p
                font-size 25px
                color #5F6A70
        .container2
            border-radius 2px

    .sectionhome3
      background #6EB9BF
      .container
        padding 0 100px
        .content
          padding 40px
          &-text
            padding 15px
            text-align right
            .text-title
              margin-top 50px
              font-size 2em
              color #204056
              .text-mensaje
                text-align right
                padding-top 10px
                font-size 1.2em
          &-img
            padding 15px
            text-align center
            img
              margin 0
              padding 0
              height 300px
              width 500px



    .sectionhome4
        background white
        .container
            padding 10px
            .section-title
                text-align center
                margin 10px
                .title
                    padding 20px
                    font-size 28px
                    color #5F6A70
            .spaces
                padding 10px
                .content
                    border-radius 2px
                    border 1px solid #e4eaec
                    background #F0F0F0
                    margin 1px
                    img
                        height 120px
                        padding 15px
                    .text-content
                        padding 10px
                        font-size 16px
                        background #728087
                        color white
                .content:hover
                    border 1px solid #0072C6
                    color white
                .content:hover .text-content
                    background #0072C6
            .content-button
                text-align center
                margin-top 20px
            .content-button a:hover
                background #0072C6
                color white

    .sectionhome5
      background white
      padding-bottom 50px
      .container
            padding 10px
            .section-title
                text-align center
                margin 10px
