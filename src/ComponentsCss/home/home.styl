#contentModal
    position relative

#contentModal .imgVideoModal
    background-repeat no-repeat
    height 270px
    position relative
    cursor pointer

.icon-closeModal
    color: #aaa;
    font-size: 30px;
    text-decoration: none;



.separacion
    padding-bottom 8px


.sectionQuienesSomos
    background #F0F0F0
    .information
        padding 1.5em 0
        &-we
            color: #5f6a70;
            font-family 'Roboto'
            font-size 1.4em
        &-more
            margin-left 2.2em
            color white
            font-size 1.2em
            background #456FB6
            padding 1em 1em
            font-family 'Roboto'
            border-radius 5px
        &-more:hover
            color #4683B2
            background #ECEFF1
            border-radius 0
            transition  border-radius 3s



